---
// src/pages/tours/index.astro
import { getCollection } from "astro:content";
// import TourPlanPreview from "@/shared/components/TourPlanPreview.astro";
import TourPlanPreview from "@/components/shared/TourPlanPreview.astro";
import BaseHead from "@/components/shared/BaseHead.astro";
import Header from "@/components/shared/Header.astro";
import Footer from "@/components/shared/Footer.astro";

const tours = await getCollection("tours");

const title = "Tours Disponibles";
const description = "Descubre nuestros emocionantes tours y aventuras.";
const image = "/path/to/default/tour/image.jpg"; // Aseg√∫rate de tener una imagen por defecto
---

<!doctype html>
<html lang="es-CL">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body>
    <Header />
    <main>
      <h1>{title}</h1>
      <div class="tours-grid">
        {
          tours.map((tour) => (
            <div class="tour-card">
              <TourPlanPreview tour={tour} />
            </div>
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
