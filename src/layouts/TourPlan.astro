---
// src/layouts/BlogPost.astro
import { type CollectionEntry } from "astro:content";
import SectionHeading from "@/components/shared/SectionHeading.astro";
import TourDetailLayout from "./TourDetailLayout.astro";
interface Props {
	entry: CollectionEntry<"tours">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const { title } = entry.data;
const description = `Art√≠culo de blog: ${title}`;
const image = "/path/to/default/blog/image.jpg";
---

<TourDetailLayout title={title} description={description} image={image} >
	<SectionHeading title={title} description={description} />
	<div class="Container">
		<article class="MdContents">
			<h1 class="ContentTitle">{title}</h1>
			<Content />
		</article>
		<aside class="Aside">
			<h3>Recomendados</h3>
		</aside>
	</div>
</TourDetailLayout>
