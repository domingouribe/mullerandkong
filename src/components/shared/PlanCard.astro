---
export interface Props {
	title: string;
	price: number;
	category?: string;
	classes: string;
	tag?: string;
	features: string[];
	thumbnailCard: string;
	altThumbnailCard: string;
	description?: string;
}

const {
	title,
	price,
	classes,
	tag,
	features,
	thumbnailCard,
	altThumbnailCard,
	description,
} = Astro.props;

// Formatea el precio según la localización de Chile
const formattedPrice = price.toLocaleString("es-CL");
---

<article class:list={["PlanCard", classes]}>
	<header class="PlanCard-header">
		<img class="PlanCard-Image" src={thumbnailCard} alt={altThumbnailCard} />
		{tag && <span class="PlanCard-tag">{tag}</span>}
	</header>
	<section class="PlanCard-section">
		<h2 class="PlanCard-title">{title}</h2>
		<p class="PlanCard-price"><span>$</span>{formattedPrice}</p>
		<h4>Incluye:</h4>
		{
			features.length > 0 && (
				<ul class="PlanCard-features alternating-colors">
					{features.map((feature) => (
						<li>{feature}</li>
					))}
				</ul>
			)
		}
	</section>
	<footer class="PlanCard-footer">
		<slot />
	</footer>
</article>

<style lang="scss">
	.PlanCard {
		display: flex;
		flex-flow: column nowrap;
		justify-content: space-between;
		gap: 1em;
		color: var(--ui-black);
		background-color: var(--cards-in-light-background);
		box-shadow: 8px 8px 0 2px rgba(0 0 0 / 20%);

		&-Image {
			width: 100%;
			background-color: rgba(128, 128, 128, 0.158);
			aspect-ratio: 2/1;
			background-size: cover;
			overflow: hidden;
		}

		&-tag {
			background-color: var(--yellow-700);
			display: flex;
			width: min-content;
			color: var(--ui-white);
			font-size: 0.8rem;
			padding: 2px 8px;
		}

		&-header {
			display: flex;
			flex-flow: column;
			justify-content: space-between;
		}
		&-title {
			font-size: 1.2rem;
			line-height: 1.2;
			font-weight: 800;
			margin: 0;
		}
		&-price {
			font-size: 1.5rem;
			font-weight: 400;
			display: flex;
			align-items: center;
			gap: 3px;
			span {
				font-size: 0.8rem;
				font-weight: normal;
			}
		}
		&-features {
			display: flex;
			flex-flow: row wrap;
			padding: 0;
			list-style: none;
			font-size: 0.7rem;
			gap: 0.7em;

			li {
				// border-bottom: 1px solid var(--ui-dark-background);
				padding-left: 0.5em;
				background-color: var(--primary-color);
				border-radius: var(--border-radius-md);
				padding-inline: var(--padding-md);
				padding-block: var(--padding-sm);
				color: var(--ui-white);
				font-weight: 500;
			}
		}

		&-section {
			padding: 0 1rem;
		}

		&-footer {
			display: flex;
			flex-flow: column;
			padding: 1em;
			gap: 1rem;
			justify-content: center;
			align-items: start;
		}
	}
</style>
