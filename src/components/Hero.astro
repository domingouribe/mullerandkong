---
import Button from "./shared/Button.astro";
---

<section class="Hero">
  <div class="Container">
    <h1 class="Hero-title shadow-titles">Tours en la Región de Coquimbo</h1>
    <p class="Hero-description">
      Ven a conocer el Valle Del Elqui, las Termas de Ovalle, montañas y ríos
      con nosotros.
    </p>
    <div class="Hero-actions">
      <Button
        text="Ver todos los tours"
        url="/plans"
        classes="Button Button-md Green"
      />
      <Button
        text="Contáctanos"
        url="/contact"
        classes="Button Button-md Orange"
      />
    </div>
  </div>
</section>

<style lang="scss">
  .Hero {
    background-image: linear-gradient(
        rgba(6, 8, 85, 0.726),
        rgba(0, 0, 0, 0.719)
      ),
      url(/src/assets/site-images/FaroLaSerena-mobile.webp);
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: local;
    height: 60vh;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    align-content: center;
    text-align: center;
    justify-content: center;
    gap: 1em;
    padding: 1em 0;
    color: var(--ui-white);

    &-actions {
      display: flex;
      gap: 1em;
      padding: 0.5em 0;

      @media (max-width: 480px) {
        flex-flow: column nowrap;
      }
    }
    &-title {
      text-transform: normal;
      color: var(--ui-white);
      font-size: 5rem;
      line-height: 1.2;
      margin: 0;
      font-weight: 800;
    }

    @media (max-width: 768px) {
      background-image: linear-gradient(
          rgba(33, 11, 94, 0.596),
          rgb(14, 13, 15)
        ),
        url(/src/assets/site-images/FaroLaSerena-mobile.webp);
      background-repeat: no-repeat;
      background-size: cover;
      background-attachment: local;
      height: unset;

      &-title {
        font-size: 2rem;
        line-height: 1.3;
      }
    }
  }
</style>
